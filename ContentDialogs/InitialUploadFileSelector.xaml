<ContentDialog
    x:Class="SAR.ContentDialogs.InitialUploadFileSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SAR.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Upload Information for Upcoming Year"
    PrimaryButtonText="Confirm"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    PrimaryButtonStyle="{StaticResource primaryButtonStyle}"
    SecondaryButtonStyle="{StaticResource secondaryButtonStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <!--Program-->
        <Grid BorderBrush="Black" BorderThickness="1"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Padding="2"
                       x:Name="ProgramLabel"
                       FontWeight="Bold"
                       Text="Program Table"/>
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Padding="2"
                       x:Name="ProgramFileName"
                       FontSize="10"
                       FontStretch="Condensed"
                       Text=""
                       TextWrapping="Wrap"/>
            <Button Grid.RowSpan="2" 
                    Background="#10497E"
                    Foreground="White"
                    CornerRadius="5"
                    x:Name="ProgramButton"
                    Click="ProgramButton_Click"
                    Grid.Column="1"
                    Content="Upload"/>
        </Grid>
        
        <!--Course-->
        <Grid BorderBrush="Black" BorderThickness="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
