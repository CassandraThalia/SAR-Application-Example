                    Background="#10497E"
                    Foreground="White"
                    CornerRadius="5"
                    x:Name="CourseButton"
                    Click="CourseButton_Click"
                    Grid.Column="1"
                    Content="Upload"/>
        </Grid>
        
        <!--Instructor-->
        <Grid BorderBrush="Black" BorderThickness="1"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Padding="2"
                       x:Name="InstructorLabel"
                       FontWeight="Bold"
